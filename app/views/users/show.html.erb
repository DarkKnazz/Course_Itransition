<div class="container-fluid" style="padding-left: 10%; padding-right: 10%">
	<div class="row header_Show">
		<%= t('users.show.profile') %>   <%= @user.nickname %>

		<% if current_user && (@user.id == current_user.id || current_user.isAdmin) %>
			<%= link_to "Edit post", edit_user_path(@user.id) %>
		<% end %>
	</div>
	<div class="row body_Show">
		<div class="col-lg-4">
			<img src=<%= @user.image %> class="img-fluid rounded float-right img_Show" width="150">
		</div>
		<div class="col-lg-8 content_Show">
			<div>
			  <a class="btn btn-social-icon btn-lg ">
			    <i class="fa fa-envelope"></i>
			  </a>
			  <%= @user.email %><br>
			</div>
			<div><%= t('users.show.about') %><%= @user.about %><br></div>
		</div>
	</div>

	<div style="padding-left: 15%; padding-right:15%">
  	  <table class="table table-striped" style="text-align: center">
  	  <thead>
      <tr>
        <th style="text-align: center">#</th>
        <th style="text-align: center"><%= t('posts.table.name') %></th>
        <th style="text-align: center"><%= t('posts.table.update') %></th>
      </tr>
  	  </thead>
  	  <tbody>
  	    <% @user.posts.each_with_index do |post, index| %>
      	  <tr onclick="window.location.href='<%= post_path(post.id) %>'">
            <th scope="row" style="text-align: center"><%= index + 1 %></th>
    	    	<td><%= post.name %></td>
    				<td><%= post.updated_at %></td>
          </tr>
	    <% end %>
  	  </tbody>
	  </table>
	</div>
</div>
