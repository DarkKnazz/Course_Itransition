<div class="container-fluid">
  <div class="row" style="min-width: 100%; height:84vh;">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="min-width: 100%; min-height: 100%">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner" role="listbox">
        <div class="carousel-item active" style="width: 100%; height:84vh; border: 1px solid black" id="slider_1">
          <div class="carousel-caption d-none d-md-block">
            <h3>Web site for your instructions</h3>
          </div>
        </div>
        <div class="carousel-item" style="width: 100%; height:84vh; border: 1px solid black" id="slider_2">
          <div class="carousel-caption d-none d-md-block">
            <h3>Create, manage, chat with each other</h3>
          </div>
        </div>
        <div class="carousel-item" style="width: 100%; height:84vh; border: 1px solid black" id="slider_3">
          <div class="carousel-caption d-none d-md-block">
            <h3>Instructions is what you need!</h3>
          </div>
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>

<div class="container-fluid main_Page_Content">
  <div class="row main_Page_Row" style="margin-top: 2%">
    <div class="col-lg-8 main_Page_Posts">
      <div class="main_Page_Posts_Header"><strong>Latest instructions</strong></div>
      <table class="table table-striped user_Edit_Table" style="border: 1px solid lightgray">
      <thead>
      <tr>
        <th style="text-align: center">#</th>
        <th style="text-align: center"><%= t('posts.table.name') %></th>
        <th style="text-align: center"><%= t('posts.table.update') %></th>
      </tr>
      </thead>
      <tbody>
        <% @posts.each_with_index do |post, index| %>
          <tr onclick="window.location.href='<%= post_path(post.id) %>'">
            <th scope="row" style="text-align: center"><%= index + 1 %></th>
            <td><%= post.name %></td>
            <td><%= post.updated_at.strftime("%d.%m.%y, %H:%M") %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
    </div>
    <div class="col-lg-4 main_Page_Tag_Cloud">
      <div style='text-align:center;'><strong>Tags</strong></div>
      <div id='tag_cloud'>
        <% tag_cloud Post.tag_counts, %w{s m l} do |tag, css_class| %>
          <%= link_to tag.name, tag_path(tag.name), class: "btn btn-sm btn-outline-danger tags" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
