<div style="padding-left: 15%; padding-right:15%; padding-top:1%; padding-bottom:2%">
    <div class="container-fluid">
      <div class="row" style="display:flex;justify-content: flex-start;">
        <% @posts.each do |post| %>
          <div class="col-lg-4">
              <div class="card" style="height: 200px;display:block;margin-bottom: 130px" onclick="window.location.href='<%= post_path(post.id) %>'">
                <img class="card-img-top" src=<%= post.preview %> alt="Card image cap" style="height:100%;width:100%">
                <div class="card-block" style="border:1px solid lightgray;">
                  <h4 class="card-title"><%= post.name %></h4>
                  <p class="card-text">
                    <% post.tags.each do |tag| %>
                      <%= link_to tag.name, tag_path(tag.name), :class => "badge badge-pill badge-danger tags" %>
                    <% end %>
                  </p>
                </div>
              </div>
          </div>
      <% end %>
      </div>
    </div>
</div>
