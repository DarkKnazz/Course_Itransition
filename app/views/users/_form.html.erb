<%= form_for(@user) do |f| %>
<div class="row">
  <div class="input-group"style="width: 90%">
    <span class="input-group-addon">Nickname</span>
    <%= f.text_field :nickname, :class => "form-control" %>
  </div>
</div><br>

<div class="row">
  <div class="input-group" style="width: 90%">
    <span class="input-group-addon">Email</span>
    <%= f.text_field :email, :class => "form-control" %>
  </div>
</div><br>

<div class="row">
  <div class="input-group" style="width: 90%">
    <span class="input-group-addon">About</span>
    <%= f.text_area :about, :class => "form-control" %>
  </div>
</div><br>

<div class="row" style="padding-left: 25%">
  <button type="submit" class="btn btn-secondary" style="width: 50%">Save Changes</button>
</div><br>

<div class="row" style="padding-left: 25%">
  <%= link_to 'Destroy', @user, :class => "btn btn-danger", method: :delete, :style => "width: 50%", data: { confirm: 'Are you sure?' } %>
</div>

<div class="row" style="padding-left: 25%">
  <%= link_to 'Back', users_path %>
</div>
<% end %>